<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs48.g05.bbc2016.gauchosell.HomeActivity"
    android:backgroundTint="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000033ff"
        android:gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/g_logo"
            android:id="@+id/g_logo"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="35sp"
            android:paddingLeft="0dp"
            android:paddingRight="240dp" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/add_post"
            android:src="@drawable/add"
            android:background="#00ffffff"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />


    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="455dp"
        android:id="@+id/listView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Logo" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/listView"
        android:background="#00ffffff">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:id="@+id/home_button"
            android:src="@drawable/home_button2"
            android:background="@android:color/transparent"
            android:contentDescription="@string/homeButton"
            android:padding="5dp" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:id="@+id/myitems_folder"
            android:src="@drawable/folder"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:contentDescription="@string/myitemsButton" />

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:id="@+id/mybids_button"
            android:src="@drawable/mybids_button"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:contentDescription="@string/bidsButton"
            android:baselineAlignBottom="true" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:id="@+id/like_button"
            android:src="@drawable/like_button2"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:contentDescription="@string/likeButton" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:id="@+id/settings_button"
            android:src="@drawable/settings_button2"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:contentDescription="@string/settings" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/listView">

    </LinearLayout>
</LinearLayout>
